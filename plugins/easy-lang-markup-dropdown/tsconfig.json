{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["jest","node","tinymce"],
    "removeComments": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}